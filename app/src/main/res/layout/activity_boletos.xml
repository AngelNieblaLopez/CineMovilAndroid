<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.boletos">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".VentaBoletosActivity">


        <EditText
            android:id="@+id/editTextCantidadBoletos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Boletos"
            android:inputType="number"
            android:maxLength="2" />

        <Button
            android:id="@+id/btnComprar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comprar"
            android:layout_below="@id/editTextCantidadBoletos"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnsillas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sillas"
            android:layout_below="@id/btnComprar"
        android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/textViewResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnComprar"
            android:layout_marginTop="16dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>